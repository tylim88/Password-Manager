{
	"name": "password-manager",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@mantine/core": "^4.1.5",
		"@mantine/form": "^4.1.5",
		"@mantine/hooks": "^4.1.5",
		"firebase": "^9.6.11",
		"firelordjs": "^1.1.16",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-firebaseui": "^6.0.0",
		"tabler-icons-react": "^1.46.0",
		"web-vitals": "^2.1.4",
		"zod": "^3.14.4"
	},
	"scripts": {
		"reinstall": "rm -rf package-lock.json && npm i && npx husky install",
		"lint": "eslint . --ext .js,.ts,.tsx --fix && npm --prefix functions run lint",
		"pretty-quick": "pretty-quick --stage",
		"tsc": "tsc",
		"copy": "cp -r functions/src/schema src",
		"start": "npm run copy && react-scripts start",
		"build": "npm run copy && react-scripts build",
		"test": "npm run copy && react-scripts test"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		],
		"rules": {
			"@typescript-eslint/no-explicit-any": "error"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.1.1",
		"@testing-library/user-event": "^14.1.1",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.26",
		"@types/react": "^18.0.6",
		"@types/react-dom": "^18.0.2",
		"pretty-quick": "^3.1.3",
		"react-scripts": "5.0.1",
		"typescript": "^4.6.3"
	}
}
